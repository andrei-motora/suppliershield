# SupplierShield Environment Variables
# Copy this file to .env and fill in your values

# Data paths (relative to project root)
DATA_DIR=data/raw
OUTPUT_DIR=data/processed

# Risk scoring weights (sum must equal 1.0)
WEIGHT_GEOPOLITICAL=0.30
WEIGHT_NATURAL_DISASTER=0.20
WEIGHT_FINANCIAL=0.20
WEIGHT_LOGISTICS=0.15
WEIGHT_CONCENTRATION=0.15

# Simulation defaults
MONTE_CARLO_ITERATIONS=5000
RANDOM_SEED=42